<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cehua"
    android:background="@color/main_bg">

    <LinearLayout
        android:id="@+id/ll_c_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/main_bg">
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/home_nav_title"
            android:orientation="vertical">

            <com.example.yao.view.CircleImageView
                android:id="@+id/touxiang_t"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/hugh"
                app:border_width="3dp"
                app:border_color="@color/bai"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/niname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xiaoli"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/bai"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/bai">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_fenlei_c"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="分类练习"
                android:clickable="true"
                android:gravity="center_vertical"
                android:drawableStart="@mipmap/home_nav_icon01"
                android:paddingLeft="30dp"
                android:drawablePadding="20dp"
                android:textSize="15sp"
                android:background="@drawable/cehua_c"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc">

            </View>

            <TextView
                android:id="@+id/tv_chazhao_c"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="题目查找"
                android:gravity="center_vertical"
                android:drawableStart="@mipmap/home_nav_icon03"
                android:paddingLeft="30dp"
                android:drawablePadding="20dp"
                android:textSize="15sp"
                android:background="@drawable/cehua_c"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"></View>

            <TextView
                android:id="@+id/tv_chengjiu_c"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="我的成就"
                android:gravity="center_vertical"
                android:drawableStart="@mipmap/home_nav_icon04"
                android:paddingLeft="30dp"
                android:drawablePadding="20dp"
                android:textSize="15sp"
                android:background="@drawable/cehua_c"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"></View>

            <TextView
                android:id="@+id/tv_shoucang_c"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="我的收藏"
                android:gravity="center_vertical"
                android:drawableStart="@mipmap/home_nav_icon02"
                android:paddingLeft="30dp"
                android:drawablePadding="20dp"
                android:textSize="15sp"
                android:background="@drawable/cehua_c"
                />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingBottom="15dp"
            android:paddingRight="30dp"
            android:background="@color/bai">

            <TextView
                android:id="@+id/tv_shezhi_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:drawableLeft="@mipmap/ic_settings_grey600_18dp"
                android:layout_alignParentBottom="true"
                android:drawablePadding="10dp"
                android:clickable="true"
                />

            <TextView
                android:id="@+id/tv_tuichu_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出"
                android:drawableLeft="@mipmap/ic_exit_to_app_grey600_18dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:drawablePadding="10dp"
                android:clickable="true"
                />

        </RelativeLayout>


    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
